<div class="mb-3">
  <h1 class="h3 d-inline align-middle">Permiso: <b><%= @permission.controller %></b> - Id:
    <b><%= @permission.id %></b></h1>
</div>

<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <table class="table table-hover table-striped table-sm mt-2 mb-6">
          <tbody>
          <tr>
            <th><%= fa('key') %>ID origen</th>
            <td><%= @permission.id %></td>
          </tr>
          <tr>
            <th><%= fa(:text) %>Tipo de recurso</th>
            <td><%= @permission.controller %></td>
          </tr>
          <tr>
            <th><%= fa(:text) %>Acci√≥n</th>
            <td><%= @permission.action %></td>
          </tr>
          </tbody>
        </table>

      </div>
    </div>
  </div>

</div>

<%= link_to(permissions_path, class: 'btn btn-primary btn-lg') do %>
  <i class="fas fa-fw fa-arrow-left"></i> Volver a la lista
<% end %>

<%= link_to(edit_permission_path(@permission), class: 'btn btn-primary btn-lg') do %>
