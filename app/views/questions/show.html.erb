

<% model_name = t('activerecord.models.question.one', default: 'Question') %>
<% title = "#{model_name}" %>
<% title_sm = "Ãšltima modificaciÃ³n: #{strftime @question.updated_at}" %>
<% content_for :title, title %>
<% content_for :page_title do %>
<%= title %>
<% end %>
<% content_for :page_title_small, title_sm %>
<% content_for :page_actions do %>
<a href="<%= questions_path %>" class="btn btn-white"><%= feather 'arrow-left' %> Volver a la lista</a>
<a href="<%= edit_question_url(@question) %>" class="btn btn-primary"><%= feather 'edit-2' %> Editar</a>
<% end %>

<table class="table table-striped table-responsive">
  <tbody>
      <tr>
        <th><%= t('activerecord.attributes.question.name') %></th>
        <td>
          <%= @question.name %>
        </td>
      </tr>
      <tr>
        <th><%= t('activerecord.attributes.question.content') %></th>
        <td>
          <%= @question.content %>
        </td>
      </tr>
      <tr>
        <th><%= t('activerecord.attributes.question.questionnaire_type_id') %></th>
        <td>
          <%= link_to @question.questionnaire_type&.name, @question.questionnaire_type if @question.questionnaire_type %>
        </td>
      </tr>
      <tr>
        <th><%= t('activerecord.attributes.question.dimension_id') %></th>
        <td>
          <%= link_to @question.dimension&.name, @question.dimension if @question.dimension %>
        </td>
      </tr>
      <tr>
        <th><%= t('activerecord.attributes.question.focus_area_id') %></th>
        <td>
          <%= link_to @question.focus_area&.name, @question.focus_area if @question.focus_area %>
        </td>
      </tr>
      <tr>
        <th><%= t('activerecord.attributes.question.business_dimension_id') %></th>
        <td>
          <%= link_to @question.business_dimension&.name, @question.business_dimension if @question.business_dimension %>
        </td>
      </tr>
    </tbody>
</table>
